<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/layout_radius_first"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:background="@drawable/calendar_radius_first"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_prev_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="  PREV  "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="2019  03"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cafe24oneprettynight"
            android:text="  NEXT  "
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/calendar_radius_second"
        android:orientation="vertical"
        android:padding="16dp"
        android:fontFamily="@font/cafe24oneprettynight">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#e0e7ee"
            android:gravity="center"
            android:orientation="horizontal"
            android:fontFamily="@font/cafe24oneprettynight">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUN"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MON"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TUE"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WED"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="THU"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="FRI"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SAT"
                android:textColor="#969a9b"
                android:textSize="14dp"
                android:textStyle="bold"
                android:fontFamily="@font/cafe24oneprettynight"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_schedule"
            android:layout_width="348dp"
            android:layout_height="306dp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>