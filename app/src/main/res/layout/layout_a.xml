<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtDday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="D-Day"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDdayContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:padding="8dp"
        android:text="디데이"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDday" />

    <TextView
        android:id="@+id/txtYesterdayTimeContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="어제의 내 공부시간"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDdayContent" />

    <TextView
        android:id="@+id/txtYesterdayTimeContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="8dp"
        android:text="23"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/txtYesterdayTimeContent"
        app:layout_constraintTop_toBottomOf="@+id/txtYesterdayTimeContent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txtYesterdayTimeContent2"
        app:layout_constraintTop_toTopOf="@+id/txtYesterdayTimeContent2" />

    <TextView
        android:id="@+id/txtYesterdayTimeMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:text="59"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/txtYesterdayTimeContent"
        app:layout_constraintTop_toBottomOf="@+id/txtYesterdayTimeContent" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/txtYesterdayTimeMinute"
        app:layout_constraintTop_toTopOf="@+id/txtYesterdayTimeMinute" />

</androidx.constraintlayout.widget.ConstraintLayout>